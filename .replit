modules = ["nodejs-20", "web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "정적 서버"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API 서버"

[[workflows.workflow]]
name = "정적 서버"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd www && python3 -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "API 서버"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 api_server.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45679
externalPort = 3000

[[ports]]
localPort = 46855
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["python3", "server.py"]
